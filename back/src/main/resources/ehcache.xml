<config
        xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
        xmlns='http://www.ehcache.org/v3'
        xsi:schemaLocation="http://www.ehcache.org/v3
            http://www.ehcache.org/schema/ehcache-core-3.7.xsd">

    <persistence directory="cache-data/thumbnails" />

    <cache-template name="default-cache-template">
        <expiry>
            <ttl unit="seconds">3600</ttl> <!-- 1 hour TTL -->
        </expiry>
        <resources>
            <heap>100</heap> <!-- Store 100 items on heap -->
            <offheap unit="MB">10</offheap>
            <disk persistent="true" unit="MB">50</disk>
        </resources>
    </cache-template>

    <cache alias="thumbnails" uses-template="default-cache-template">
        <key-type>java.lang.String</key-type>
        <value-type>org.springframework.core.io.Resource</value-type>
        <resources>
            <heap>200</heap> <!-- More heap for thumbnails -->
        </resources>
    </cache>

    <cache alias="comments" uses-template="default-cache-template">
        <key-type>java.lang.String</key-type>
        <value-type>java.lang.Object</value-type>
        <resources>
            <heap>200</heap>
        </resources>
    </cache>

    <cache alias="video-map-tiles" uses-template="default-cache-template">
        <key-type>java.lang.String</key-type>
        <value-type>java.lang.Object</value-type>
        <resources>
            <heap>500</heap>
        </resources>
    </cache>

</config>
